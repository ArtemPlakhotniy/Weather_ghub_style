<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    tools:context=".MainActivity">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:name="com.example.minorius.weather_ghub.f2"
        android:id="@+id/fragment1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fragment2"
        android:layout_toEndOf="@+id/fragment2" />

    <fragment

        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:name="com.example.minorius.weather_ghub.f1"
        android:id="@+id/fragment2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <android.support.v7.widget.Toolbar
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:minHeight="80dp"
        android:id="@+id/my_mult_tool"
        app:title="@string/app_name"
        app:subtitle="minorius"

        >

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:src="@drawable/top"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:background="@color/Line"
        >

    </LinearLayout>

</RelativeLayout>